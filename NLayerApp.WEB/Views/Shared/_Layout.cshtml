<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NLayerApp.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NLayerApp.WEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/maze.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Head", false)
</head>
<body class="top">
    <header class="head">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NLayerApp.WEB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Maze" asp-action="StartGame">StartGame</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Levels" asp-action="DrawCursedForest">CursedForest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Levels" asp-action="DrawPoisonSwamps">PoisonSwamps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Levels" asp-action="DrowForestOfSouls">ForestOfSouls</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MazeFromeDB" asp-action="CreateMaze">CreateMazeForTest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MazeFromeDB" asp-action="DrawFromDb">TestMaze</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            <div class="Choice">
                <div class="shopMenu">
                    <div>
                        <ul>
                            <li class="one_quarter"><h5 class='shopText'>Potion treatment costs 50 silver</h5></li>
                        </ul>
                        <ul>
                            <li class="one_quarter"><a class="paginator-button" href="/Maze/AddNewItems?Name=PotionTreatment">I want to buy potion treatment</a></li>
                        </ul>
                    </div>

                    <div>
                        <ul>
                            <li class="one_quarter"><h5 class='shopText'>InvisibilityCap costs 60 silver</h5></li>
                        </ul>

                        <ul>
                            <li class="one_quarter"><a class="paginator-button" href="/Maze/AddNewItems?Name=InvisibilityCap">I want to buy invisibilityCap</a></li>
                        </ul>
                    </div>

                    <div>
                        <ul>
                            <li class="one_quarter"><h5 class='shopText'>GiganHammer costs 70 silver</h5></li>
                        </ul>

                        <ul>
                            <li class="one_quarter"><a class="paginator-button" href="/Maze/AddNewItems?Name=GiganHammer">I want to buy giganHammer</a></li>
                        </ul>
                    </div>

                    <div>
                        <ul>
                            <li class="one_quarter"><h5 class='shopText'>JumperBoots costs 100 silver</h5></li>
                        </ul>

                        <ul>
                            <li class="one_quarter"><a class="paginator-button" href="/Maze/AddNewItems?Name=JumperBoots">I want to buy JumperBoots</a></li>
                        </ul>
                    </div>

                    <div>
                        <ul>
                            <li class="one_quarter"><h5 class='shopText'>I teleport you back and enjoy being alive.</h5></li>
                        </ul>
                        <ul>
                            <li class="one_quarter"><a class="paginator-button" id="end" href="#">Сontinue the game</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NLayerApp.WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
